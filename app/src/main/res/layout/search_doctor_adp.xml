<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr_current_loc_descp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x_et_bg_gridhome"
        >



            <ImageView
                android:id="@+id/img_next"
                android:layout_width="@dimen/size0"
                android:layout_height="@dimen/size0"
                android:layout_centerVertical="true"
                android:background="@drawable/call_complete_icon"

                />

        <TextView
            android:id="@+id/txt_current_loc_descp"
            android:layout_width="@dimen/size16"
            android:layout_height="wrap_content"
            android:text="Dr Anil Gupta"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_next"
            android:layout_marginLeft="@dimen/mrg2"
            android:layout_marginRight="@dimen/mrg2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size188"/>

        <TextView
            android:id="@+id/txt_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mrg3"
            android:text="Physian"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mrg2"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>


</RelativeLayout>