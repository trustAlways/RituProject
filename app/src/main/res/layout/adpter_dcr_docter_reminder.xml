<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mrg3">

    <RelativeLayout
        android:id="@+id/rr_dcr_txt_doc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/mrg1"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rr_full_descp_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rr_doc_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/mrg1"
                >
                <TextView
                    android:id="@+id/rr_doc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size0"
                    android:text="Dr. anil Kumar krugnugh"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/mrg1"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:capitalize="words"
                    android:textColor="@color/colorPrimary"/>


                <TextView
                    android:id="@+id/doc_specialiti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mrg4"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/mrg1"
                    android:layout_below="@+id/rr_doc_name"
                    android:text="Anesthesiology"
                    />


            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rr_left_product"
                    android:layout_width="@dimen/size10"
                    android:layout_height="@dimen/size3"
                    android:layout_below="@+id/rr_doc_info"
                    android:background="@drawable/submit_dcr_drdescp_icon"

                    >

                    <EditText
                        android:id="@+id/edt_product"
                        android:layout_width="@dimen/size19"
                        android:layout_height="@dimen/size33"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorPrimary"
                        android:focusable="false"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/mrg4"
                        android:text="NA"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/mrg5"
                        ></EditText>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rr_right_qty"
                    android:layout_width="@dimen/size6"
                    android:layout_height="@dimen/size3"
                    android:layout_marginLeft="@dimen/mrg2"
                    android:layout_below="@+id/rr_doc_info"
                    android:layout_toRightOf="@+id/rr_left_product"
                    android:background="@drawable/submit_dcr_drdescp_icon">

                    <EditText
                        android:id="@+id/edt_product_qty"
                        android:layout_width="@dimen/size5"
                        android:layout_height="@dimen/size33"
                        android:hint="@string/qty"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="@dimen/mrg4"
                        android:inputType="number"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        ></EditText>

                </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout><!--2222-->
</RelativeLayout>


