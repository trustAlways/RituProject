<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr_left_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >
        <RelativeLayout
            android:id="@+id/rr_left_checkuncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/mrg1"
            >

            <RelativeLayout
                android:id="@+id/rr_left_checked"
                android:layout_width="@dimen/size2"
                android:layout_height="@dimen/size2"
                android:layout_centerVertical="true">


                <CheckBox
                    android:id="@+id/chk_left_checked"
                    android:layout_width="@dimen/step_count"
                    android:layout_height="@dimen/step_count"
                    android:button="@drawable/checkbox"
                    android:layout_centerVertical="true"

                    />
            </RelativeLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rr_left_qty"
            android:layout_width="@dimen/size13"
            android:layout_height="@dimen/size3"
            android:background="@drawable/submit_dcr_drdescp_icon"
android:layout_toRightOf="@+id/rr_left_checkuncheck"
            >

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="@dimen/size19"
            android:layout_height="@dimen/size3"
android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mrg4"
            android:text="@string/add_product"
            android:paddingTop="@dimen/mrg3"
            android:paddingLeft="@dimen/mrg2"

            ></TextView>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rr_right_qty"
        android:layout_width="@dimen/size14"
        android:layout_height="@dimen/size3"
        android:layout_alignParentRight="true"
        android:background="@drawable/submit_dcr_drdescp_icon"


        >

        <EditText
            android:id="@+id/edt_product_qty"
            android:layout_width="@dimen/size14"
            android:layout_height="@dimen/size3"
            android:hint="@string/qty"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/size2"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/mrg4"
            android:inputType="number"
            android:enabled="false"
            android:background="@android:color/transparent"
            ></EditText>

    </RelativeLayout>



</RelativeLayout>